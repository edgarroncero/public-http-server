server {
    listen       ${NGINX_PORT};
    server_name _;

    location / {
        root   /usr/share/nginx/html;
        autoindex on;        # This enables the "Index of" listing
        autoindex_exact_size off; # Optional: shows file sizes in KB/MB instead of bytes
        autoindex_localtime on;   # Optional: shows file times in your local timezone
	#types {
		#text/plain log;
		#}
    }
}
